@{
    @model IEnumerable<VideoViewModel>;
    ViewBag.Title = "Home";
}

    <table>
        @foreach (var video in Model)
        {
        <tr>
            <td>@video.Title</td>
            <td>@video.Genre</td>
            <td><a asp-action="Details" asp-route-id="@video.Id">Details</a></td> <!-- argument: label, controller, route-->
            <td><a asp-action="Edit" asp-route-id="@video.Id">Edit</a></td>
        </tr>
        }
    </table>

